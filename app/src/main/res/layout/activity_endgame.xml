<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/endgame_title"
        android:textColor="@color/white"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:padding="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/endScore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/submitHighscore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/button_style"
        android:textColor="@color/white"
        android:text="@string/endgame_submit"
        android:onClick="onclickButtonStart"/>

</LinearLayout>